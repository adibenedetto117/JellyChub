{
  "expo": {
    "name": "JellyChub",
    "slug": "jellychub",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "jellychub",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jellychub.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "fetch"
        ],
        "NSAppleMusicUsageDescription": "Access your music library for playback",
        "NSLocalNetworkUsageDescription": "JellyChub needs local network access to connect to your Jellyfin server on your home network.",
        "NSBonjourServices": [
          "_jellyfin._tcp"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsLocalNetworking": true
        },
        "LSApplicationQueriesSchemes": [
          "vlc",
          "vlc-x-callback",
          "infuse",
          "nplayer-http",
          "nplayer-https"
        ]
      }
    },
    "android": {
      "package": "com.jellychub.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "edgeToEdgeEnabled": true,
      "usesCleartextTraffic": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.PICTURE_IN_PICTURE",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "androidTV": {
      "isTV": true,
      "banner": "./assets/tv-banner.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-file-system",
      "expo-sqlite",
      "expo-audio",
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ],
      [
        "expo-media-control",
        {
          "enableBackgroundAudio": true,
          "audioSessionCategory": "playback"
        }
      ],
      [
        "react-native-google-cast",
        {
          "receiverAppId": "CC1AD845"
        }
      ],
      "expo-font",
      "expo-asset",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#0ea5e9"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
